<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cc_card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/list_item_drawable"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingStart="15dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:paddingTop="5dp"
        android:paddingEnd="15dp"
        android:paddingBottom="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/company_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:padding="10dp"
            android:textColor="@color/white"
            android:text="Company Name:"
            app:layout_constraintEnd_toStartOf="@id/company_name_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/company_name_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center|start"
            android:maxLines="1"
            android:padding="10dp"
            android:textColor="@color/white"
            android:text="Company Name Here..."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/company_name_txt"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/person_name_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:padding="10dp"
            android:textColor="@color/white"
            android:text="Person Name:"
            app:layout_constraintEnd_toEndOf="@id/company_name_txt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/company_name_txt" />

        <TextView
            android:id="@+id/person_name_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center|start"
            android:textColor="@color/white"
            android:maxLines="1"
            android:padding="10dp"
            android:text="Person Name Here..."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/person_name_txt"
            app:layout_constraintTop_toBottomOf="@id/company_name_txt" />

        <TextView
            android:id="@+id/desgination_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:padding="10dp"
            android:textColor="@color/white"
            android:text="Designation:"
            app:layout_constraintEnd_toEndOf="@id/person_name_txt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/person_name_txt" />

        <TextView
            android:id="@+id/desgination_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center|start"
            android:maxLines="1"
            android:padding="10dp"
            android:textColor="@color/white"
            android:text="Designation here"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/desgination_txt"
            app:layout_constraintTop_toBottomOf="@id/person_name_txt" />

        <TextView
            android:id="@+id/contact_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:padding="10dp"
            android:text="Contact:"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@id/desgination_txt"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/desgination_txt" />

        <TextView
            android:id="@+id/contact_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center|start"
            android:maxLines="1"
            android:padding="10dp"
            android:textColor="@color/white"
            android:text="Contact here"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/contact_txt"
            app:layout_constraintTop_toBottomOf="@id/desgination_txt" />

        <TextView
            android:id="@+id/email_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:padding="10dp"
            android:text="Email:"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@id/contact_txt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/contact_txt" />

        <TextView
            android:id="@+id/email_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:padding="10dp"
            android:text="Email Here"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/email_txt"
            app:layout_constraintTop_toBottomOf="@id/contact_txt" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>